<div class="container">
 <div class="row">
   <%= render 'books/list', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>
  
  
    <table class="table">
      <tbody>
        <tr>
          <th>image</th>
          
          <th>name</th>
        </tr>
        <tr>
           <% @users.each do |user| %>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill,100,100,format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", "/users/#{user.id}" %>
          </td>
          <td></td>
         
        </tr>
        <% end %>
        
      </tbody>
    </table>
  </div>