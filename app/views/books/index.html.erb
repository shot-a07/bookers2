<%= notice %>

<div class="container">
  <div class="row">
   <%= render 'list', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill,100,100,format: 'jpeg', fallback: "no_image.jpg" %>
          <br>
          <%= @user.name %>
          </td>
          
        
          <td><%=link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          
        </tr>
        <% end %>
        
      </tbody>
    </table>
